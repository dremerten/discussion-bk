<%= simple_form_for(@channel) do |f| %>
  <%= f.error_notification %>

 <div class="field">
   <div class="control">
     <%= f.input :channel, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }, label: 'Must Select a Channel!', error: 'Channel is mandatory, please specify one' %> 
   </div>
 </div>

 <%= f.button :submit, class: 'button is-info' %>
<% end %>
